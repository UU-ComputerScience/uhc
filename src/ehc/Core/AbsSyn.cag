DATA CExprAnn
  | Ty			ty				: {Ty}
  | Coe			coe				: {RelevCoe}
  | Debug		info			: {String}

-- | ann for name intro
DATA CBindAnn
  | Coe			coe				: {RelevCoe}
%%]

%%[(8 codegen)
TYPE CBindAnnL	= [CBindAnn]
