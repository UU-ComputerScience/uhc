                                                                                   Just arity
                                                                                     | arity == @appArity && @lhs.isStrict
                                                                                         -> GrExpr_Call funNm argL'
                                                                                     | arity == @appArity
                                                                                         -> GrExpr_Store (GrVal_Node (GrTag_Fun funNm) argL')
                                                                                     | arity > @appArity
                                                                                         -> mkE (mkNdPApp funNm (arity - @appArity) argL')
