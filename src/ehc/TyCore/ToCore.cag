%%[(8 codegen tycore) hs
type BindCore = [(Maybe CBindCateg,CBindL)]

mkLet :: CBindCateg -> BindCore -> CExpr -> CExpr
mkLet dfltCateg bs e = foldr (\(c,b) e -> acoreLetMerge True (maybe dfltCateg id c) b e) e bs
%%]

