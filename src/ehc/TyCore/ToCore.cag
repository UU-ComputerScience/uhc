%%[(8 codegen tycore) hs export(tycore2core)
tycore2core :: EHCOpts -> Module -> CModule
tycore2core opts mod
  = core_Syn_AGItf t
  where t = wrap_AGItf (sem_AGItf (AGItf_AGItf mod))
                       (Inh_AGItf
                         { opts_Inh_AGItf = opts
                         })

%%]

