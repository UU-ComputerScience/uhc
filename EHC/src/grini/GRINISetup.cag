ATTR AllBind [ | | lamGlobL, cafGlobL USE {++} {[]}: {AssocL HsName RunVal} ]
ATTR AllExpr [ | | self: SELF ]

SEM GrBind
  | Bind        lhs         .   (lamGlobL,cafGlobL)
                                            =   let g = [(@nm,RVGlob @nm @argNmL @expr.self)]
                                                in  if null @argNmL then ([],g) else (g,[])
