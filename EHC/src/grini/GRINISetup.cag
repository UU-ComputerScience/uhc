grGriSetup :: GrModule -> IO RunState
grGriSetup cmod
  =  let  t = wrap_GrAGItf (sem_GrAGItf (GrAGItf_AGItf cmod)) Inh_GrAGItf
     in   (rs_Syn_GrAGItf t)
