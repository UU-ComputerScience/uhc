%%[(8 counting) hs export (Subst(..))
class Subst a where
  substAnn :: a -> AnnSol -> a
  substAnn a m = subst a m Map.empty Map.empty
  substTy :: a -> TySol -> a
  substTy a m =  subst a Map.empty m Map.empty
  substScheme :: a -> SchemeSol -> a
  substScheme a m = subst a Map.empty Map.empty m
  substSolution :: a -> Solution -> a
  substSolution a (Solution as ts ss) = subst a as ts ss

  subst :: a -> AnnSol -> TySol -> SchemeSol -> a
  subst = substM Set.empty True

  substB :: Bool -> a -> AnnSol -> TySol -> SchemeSol -> a
  substB = substM Set.empty

  substM :: Set HsName -> Bool -> a -> AnnSol -> TySol -> SchemeSol -> a

instance Subst Expr where
  substM m b a am tm sm = subst_Syn_Expr $ wrap_Expr (sem_Expr a) 
    (Inh_Expr b am sm tm m)

instance Subst Annotation where
  substM m b a am tm sm = subst_Syn_Annotation $ wrap_Annotation (sem_Annotation a) 
    (Inh_Annotation b am sm tm m)

instance Subst Type where
  substM m b a am tm sm = subst_Syn_Type $ wrap_Type (sem_Type a) 
    (Inh_Type b am sm tm m)

instance Subst Constraint where
  substM m b a am tm sm = subst_Syn_Constraint $ wrap_Constraint (sem_Constraint a) 
    (Inh_Constraint b am sm tm m)

instance Subst Constraints where
  substM m b a am tm sm = subst_Syn_Constraints $ wrap_Constraints (sem_Constraints a) 
    (Inh_Constraints b am sm tm m)

instance Subst Field where
  substM m b a am tm sm = subst_Syn_Field $ wrap_Field (sem_Field a) 
    (Inh_Field b am sm tm m)

instance Subst EtaType where
  substM m b a am tm sm = subst_Syn_EtaType $ wrap_EtaType (sem_EtaType a) 
    (Inh_EtaType b am sm tm m)

instance Subst RhoType where
  substM m b a am tm sm = subst_Syn_RhoType $ wrap_RhoType (sem_RhoType a) 
    (Inh_RhoType b am sm tm m)

instance Subst RhoScheme where
  substM m b a am tm sm = subst_Syn_RhoScheme $ wrap_RhoScheme (sem_RhoScheme a) 
    (Inh_RhoScheme b am sm tm m)

instance Subst Env where
  substM m b a am tm sm = subst_Syn_Env $ wrap_Env (sem_Env a) 
    (Inh_Env b am sm tm m)

instance Subst Scheme where
  substM m b a am tm sm = subst_Syn_Scheme $ wrap_Scheme (sem_Scheme a) 
    (Inh_Scheme b am sm tm m)
    
instance Subst [Annotation] where
  substM m b xs am tm sm = map (\x -> substM m b x am tm sm) xs

instance Subst [Type] where
  substM m b xs am tm sm = map (\x -> substM m b x am tm sm) xs

instance Subst Fields where
  substM m b xs am tm sm = map (\x -> substM m b x am tm sm) xs
 
instance Subst [Fields] where
  substM m b xss am tm sm = map (\xs -> substM m b xs am tm sm) xss

instance Subst [RhoType] where
  substM m b xs am tm sm = map (\x -> substM m b x am tm sm) xs

instance Subst [[RhoType]] where
  substM m b xss am tm sm = map (\xs -> substM m b xs am tm sm) xss

