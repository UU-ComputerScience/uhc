evalStored :: GrModule -> GrModule
evalStored grmod = let t = wrap_GrAGItf (sem_GrAGItf (GrAGItf_AGItf grmod))
                                        (Inh_GrAGItf)
                   in grTrf_Syn_GrAGItf t
