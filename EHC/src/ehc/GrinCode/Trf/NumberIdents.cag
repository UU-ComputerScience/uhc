numberIdents :: GrModule -> GrModule
numberIdents code
  = let inh = Inh_GrAGItf {}
        syn = wrap_GrAGItf (sem_GrAGItf (GrAGItf_AGItf code)) inh
    in  grTrf_Syn_GrAGItf syn
