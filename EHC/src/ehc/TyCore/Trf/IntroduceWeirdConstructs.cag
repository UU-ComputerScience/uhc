%%[(8 codegen tycore tauphi).tcmodTrfIntroduceWeirdConstructs hs
cmodTrfIntroduceWeirdConstructs :: Module -> Module
cmodTrfIntroduceWeirdConstructs tcmod
  =  let  t = wrap_AGItf (sem_AGItf (AGItf_AGItf tcmod)) Inh_AGItf
     in   cTrf_Syn_AGItf t
