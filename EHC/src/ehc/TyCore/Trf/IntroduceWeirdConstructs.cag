            ])
      Nothing
      0
      (eseq [ val (Expr_Lam
                    (eseq [ bind "x" $ Expr_Lazy (eseq [val $ strict int, val $ strict char])
                          , bind "y" $ Expr_Lazy (eseq [val $ strict char, val $ strict char])
                          ])
                    (Expr_Lam (eseq [ bind "z" int])
                              (single $ var "z")))
            ])
  ]
  where
    int  = var "Int"
    char = var "Char"
    seqInt  = eseq [val int]
    seqChar = eseq [val char]
    strict  = Expr_Ann (ExprAnn_Strictness Strict)

    single e   = eseq [val e]
    force e    = Expr_Force e
    lazy ty    = single $ Expr_Lazy ty
    val e      = ExprSeq1_L0Val e Nothing
    var nm     = Expr_Var $ mkHNm nm
    eseq es    = Expr_Seq es
    bind nm ty = ExprSeq1_L0Bind (mkHNm nm) Nothing ty

infixr 5 `arr`

arr :: Expr -> Expr -> Expr
arr = Expr_Arrow
