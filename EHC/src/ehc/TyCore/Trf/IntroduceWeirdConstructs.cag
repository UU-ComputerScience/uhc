      0
      (eseq [ val (Expr_Lam
                    (eseq [bind "x" $ Expr_Lazy (eseq [val $ strict int, val $ strict char])])
                    (Expr_Lam (eseq [bind "c" char])
                      (var "bar10a" `Expr_App` (eseq [val $ Expr_Delay $ force $ var "x"]))))
            , val (Expr_Lam
