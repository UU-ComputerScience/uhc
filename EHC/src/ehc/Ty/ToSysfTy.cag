  | App         loc         .   kiArg       =   mkNewTyVar @lUniq_arg
                            .   kiFunc      =   [@kiArg] `appArr` @lhs.kiTopDown
                func        .   kiTopDown   =   @kiFunc
                arg         .   kiTopDown   =   @kiArg
                loc         .   lUniq_arg   :   UNIQUEREF gUniq
