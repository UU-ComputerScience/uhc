data JVarGamInfo = JVarGamInfo {vgiPP :: PP_Doc, vgiIsEmpty :: Bool}
type JVarGam = Map.Map String JVarGamInfo
}

ATTR AllNT AGRuleItf [ jVarGam: JVarGam | | ]
ATTR JExpr View [ | | jVarGam: JVarGam ]

SEM AGItf
  | AGItf       decls   .   jVarGam     =   Map.empty

