-- Which view
-------------------------------------------------------------------------

ATTR AGRuleItf AllRule AllRExpr AllJudge MbJExpr AllViewSel [ view: String | | ]

SEM Decl
  | *           loc     .   view        =   ""

SEM View
  | *           loc     .   view        =   ""

